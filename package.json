{
    "name": "quizdown",
    "version": "0.7.0",
    "description": "Markdown for generating interactive quiz apps in the browser.",
    "private": false,
    "type": "module",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public",
        "validate": "svelte-check",
        "release": "dotenv release-it"
    },
    "release-it": {
        "hooks": {
            "after:bump": "npm run build"
        },
        "npm": {
            "publish": false
        },
        "github": {
            "release": true
        }
    },
    "keywords": [
        "quiz",
        "multiple-choice",
        "svelte",
        "markdown"
    ],
    "author": "Malte Bonart",
    "license": "MIT",
    "devDependencies": {
        "@fortawesome/free-regular-svg-icons": "^6.6.0",
        "@rollup/plugin-commonjs": "^26.0.1",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^15.2.3",
        "@rollup/plugin-typescript": "^11.1.6",
        "@tsconfig/svelte": "^5.0.4",
        "@types/dompurify": "^3.0.5",
        "@types/highlight.js": "^10.1.0",
        "@types/katex": "^0.16.7",
        "@types/marked": "^6.0.0",
        "acorn": "^8.2.4",
        "css-tree": "^3.0.0",
        "dotenv-cli": "^4.0.0",
        "eslint": "^9.10.0",
        "eslint-plugin-svelte": "^2.44.0",
        "postcss": "^8.3.5",
        "release-it": "^14.6.1",
        "rollup": "^4.21.3",
        "rollup-plugin-analyzer": "^4.0.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-svelte": "^7.2.2",
        "rollup-plugin-version-injector": "^1.3.3",
        "sass": "^1.79.1",
        "sirv-cli": "^1.0.0",
        "svelte": "^4.2.19",
        "svelte-check": "^4.0.2",
        "svelte-preprocess": "^6.0.2",
        "tslib": "^2.7.0",
        "typescript": "^5.0.0"
    },
    "repository": "https://github.com/bonartm/quizdown-js",
    "main": "public/build/quizdown.js",
    "dependencies": {
        "@fortawesome/fontawesome-svg-core": "^6.6.0",
        "@fortawesome/free-solid-svg-icons": "^6.6.0",
        "@rollup/plugin-terser": "^0.4.4",
        "auto-bind": "^5.0.1",
        "dompurify": "^3.1.6",
        "highlight.js": "^10.7.0",
        "katex": "0.13.11",
        "marked": "3.0.0",
        "strip-indent": "^4.0.0",
        "svelte-fa": "^4.0.2",
        "svelte-i18n": "^4.0.0",
        "yaml": "2.0.0-5"
    },
    "engines": {
        "node": ">=18.0.0 <22.0.0"
    }
}
